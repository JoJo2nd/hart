
include "uuid.fbs";

namespace hart.render.resource;

enum MaterialInputType : byte {
    Texture,
    Vec4,
    Mat33,
    Mat44
}

table MaterialInput {
    name:string;
    type:MaterialInputType;
    data:[float];
    res:resource.uuid;
}

table MaterialSetup {
    material:resource.uuid;
    inputs:[MaterialInput];
}

file_identifier "rmst";
root_type MaterialSetup;